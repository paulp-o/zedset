{
  "features": {
    "edit_prediction_provider": "zed"
  },
  "search": {
    "button": false
  },
  "minimap": {
    "show": "never",
    "current_line_highlight": "all",
    "thumb": "always",
    "thumb_border": "full"
  },
  "edit_predictions": {
    "mode": "subtle",
    "enabled_in_text_threads": true
  },
  "debugger": {
    "button": false
  },
  "show_wrap_guides": false,
  "git_panel": {
    "dock": "right",
    "default_width": 200,
    "button": false
  },
  "file_types": {
    "Dockerfile": [
      "Dockerfile",
      "Dockerfile*"
    ],
    "env": [
      ".env",
      ".env.*"
    ]
  },
  "language_models": {
    "openai": {}
  },
  "theme": {
    "dark": "Rosé Pine Moon",
    "light": "Rosé Pine Moon",
    "mode": "system"
  },
  "indent_guides": {
    "enabled": false
  },
  "when_closing_with_no_tabs": "keep_window_open",
  "collaboration_panel": {
    "dock": "right",
    "button": false
  },
  "preview_tabs": {
    "enabled": false
  },
  "outline_panel": {
    "button": false,
    "dock": "right"
  },
  "global_lsp_settings": {
    "button": false
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "gutter": {
    "line_numbers": false,
    "folds": false,
    "runnables": false,
    "breakpoints": true
  },
  "ui_font_size": 11,
  "buffer_font_size": 11,
  "buffer_line_height": {
    "custom": 2.5
  },
  "buffer_font_family": "Monaspace Krypton",
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-opus-4-1"
    },
    "preferred_completion_mode": "normal",
    "dock": "right",
    "button": false
  },
  "inlay_hints": {
    "enabled": false
  },
  "project_panel": {
    "dock": "left",
    "sticky_scroll": false,
    "auto_fold_dirs": false,
    "indent_guides": {
      "show": "never"
    },
    "indent_size": 15,
    "button": false
  },
  "journal": {
    "path": "~",
    "hour_format": "hour24"
  },
  "terminal": {
    "copy_on_select": true,
    "dock": "bottom",
    "button": false,
    "default_width": 200,
    "line_height": {
      "custom": 1
    }
  },
  "chat_panel": {
    "dock": "right",
    "button": "when_in_call",
    "default_width": 200
  },
  "notification_panel": {
    "button": false
  },
  "languages": {
    "Rust": {
      "formatter": "language_server"
    },
    "GraphQL": {
      "formatter": "prettier",
      "format_on_save": "prettier"
    },
    "JSON": {
      "formatter": "prettier",
      "format_on_save": "prettier"
    },
    "Markdown": {
      "formatter": "prettier",
      "format_on_save": "prettier"
    },
    "TypeScript": {
      "formatter": "prettier",
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.fixAll.oxlint": true
      },
      "format_on_save": "prettier"
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll": true,
        "source.fixAll.oxlint": true
      },
      "format_on_save": "prettier"
    },
    "PHP": {
      "formatter": "language_server",
      "language_servers": [
        "intelephense",
        "!phpactor"
      ],
      "format_on_save": {
        "external": {
          "command": "bash",
          "arguments": [
            "-c",
            "temp=$(mktemp) && cat > $temp && ./vendor/bin/pint --quiet $temp && cat $temp"
          ]
        }
      }
    }
  },
  "file_scan_inclusions": [
    ".env",
    "laravel.log",
    "query.log"
  ],
  "code_actions_on_format": {
    "source.fixAll.oxlint": true,
    "source.organizeImports.oxlint": true
  },
  "lsp": {
    "eslint": {
      "settings": {
        "enabled": false
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          "command": "clippy"
        }
      },
      "enable_lsp_tasks": true
    }
  }
}